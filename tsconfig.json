{
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "strict": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
